# Environment Variables for Next Starter App
# Copy this file to .env.local and fill in the values

# Database
DATABASE_URL="file:./dev.db"

# Email Configuration
EMAIL_FROM="noreply@yourdomain.com"
NODEMAILER_PASSWORD="your_gmail_app_password"

# better-auth
BETTER_AUTH_SECRET="your_better_auth_secret_32_characters_long" 
BETTER_AUTH_URL="http://localhost:3000"

# GitHub OAuth (optional, set enabled: true in auth.ts if using)
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# Google OAuth (optional, set enabled: true in auth.ts if using)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# Node Environment (automatically set in production)
NODE_ENV="development"